<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/designer"
    tools:context=".MailActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="165dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tticon"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColorHint="#000000"
        android:hint="Recipients"
        android:maxLength="25"
        android:background="@drawable/hello"
        android:layout_marginTop="220dp"
        android:id="@+id/edtone"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:textColorHint="#000000"
        android:background="@drawable/hello"
        android:gravity="center"
        android:maxLength="40"
        android:layout_marginTop="10dp"
        android:hint="Subject"
        android:id="@+id/edttwo"
        android:layout_below="@+id/edtone"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColorHint="#000000"
        android:background="@drawable/hello"
        android:gravity="center"
        android:hint="Type your message here"
        android:id="@+id/edtthree"
        android:maxLength="140"
        android:layout_below="@+id/edttwo"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Compose Email"
        android:id="@+id/btn"
        android:background="#f2fe71"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/edtthree"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>